@model SimpTest.ViewModel.RegUser
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>
<form method="post" action="/Home/Register">
<div>
@Html.LabelFor(t=>t.Username)        
    </div> </br>
    <div>
        @Html.TextBoxFor(t=>t.Username)
        @Html.ValidationMessageFor(t=>t.Username)
    </div></br>
    <div>
@Html.LabelFor(t=>t.Password)        
    </div> </br>
    <div>
        @Html.PasswordFor(t=>t.Password)
        @Html.ValidationMessageFor(t=>t.Password)
    </div></br>
    <div>
@Html.LabelFor(t=>t.Email)        
    </div> </br>
    <div>
        @Html.TextBoxFor(t=>t.Email)
        @Html.ValidationMessageFor(t=>t.Email)
    </div></br>
    <input type="submit" value="Register">
</form>
